{
  "root": true,
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "@nuxtjs/eslint-config-typescript"
  ],
  "rules": {
    "indent": "off",
    "no-unused-vars": "off",
    "padded-blocks": "off",
    "semi": [  "error", "always" ],
    "template-curly-spacing:": "off",

    // "@typescript-eslint/indent": 2,
    "@typescript-eslint/no-unused-vars": "off",

    "vue/script-indent": ["warn", 2, {
      "baseIndent": 0
    }]
  }
}